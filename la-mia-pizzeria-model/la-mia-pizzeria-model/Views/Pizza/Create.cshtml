@model PizzaFormModel

@{

}

<div class="text-center">

    <h1>Crea una pizza!</h1>

    <form method="post" asp-controller="Pizza" asp-action="Create">

        @Html.AntiForgeryToken()

      <div class="mb-3">
        <label asp-for="Pizza.ImgSrc" class="form-label">Image:</label>
        <input asp-for="Pizza.ImgSrc" class="form-control" id="ImgSrc" aria-describedby="Name">
        <span asp-validation-for="Pizza.ImgSrc" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Pizza.Name" class="form-label">Name:</label>
        <input asp-for="Pizza.Name" type="text" class="form-control" id="Name" aria-describedby="Name">
        <span asp-validation-for="Pizza.Name" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Pizza.Description" class="form-label">Description:</label>
        <input asp-for="Pizza.Description" type="text" class="form-control" id="Description" aria-describedby="Description">
        <span asp-validation-for="Pizza.Description" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Pizza.Price" class="form-label">Price:</label>
        <input asp-for="Pizza.Price" type="text" class="form-control" id="Price" aria-describedby="Price">
        <span asp-validation-for="Pizza.Price" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Pizza.CategoryId" class="form-label">Category:</label>

        <select asp-for="Pizza.CategoryId">
            <option value=""></option>
            @foreach (var category in Model.Categories)
            {
                @if (Model.Pizza.CategoryId == category.Id)
                {
                    <option value="@category.Id" selected>@category.Name</option>
                }
                else
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
        </select>
      </div>
      <div class="mb-3">
        <label asp-for="SelectedIngredients" class="form-label">Ingredients:</label>

        <select asp-for="SelectedIngredients" multiple="multiple" asp-items="@Model.Ingredients"></select>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>

    </form>
</div>
